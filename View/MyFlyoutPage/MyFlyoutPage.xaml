<?xml version="1.0" encoding="utf-8" ?>
<!-- FlyoutPage is page that manage 2 related pages of information -->
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Recipe.View.MyFlyoutPage.MyFlyoutPage"
             xmlns:vm="clr-namespace:Recipe.ViewModels"
             xmlns:m="clr-namespace:Recipe.Models"
             x:DataType="vm:CookBookViewModel"
             Title="MyFlyoutPage">
    <FlyoutPage.Flyout>
        <ContentPage Title="My APP" BackgroundColor="White">
            <StackLayout>
                <Label Text="CookBook" TextColor="Green" HorizontalOptions="Start" FontSize="24" Margin="40, 20, 0, 0" FontFamily="InterBold"></Label>
                <SearchBar
                    Placeholder="Search recipe..."
                    Text="{Binding SearchText}">
                </SearchBar>
                <ListView x:Name="RecipeList" ItemsSource="{Binding RecipeList}" Margin="20" HasUnevenRows="True"  RowHeight="-1" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="m:RecipeItem">
                            <ViewCell>
                                <StackLayout Spacing="200">
                                    <Border HeightRequest="100" Margin="20">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="20">

                                            </RoundRectangle>
                                        </Border.StrokeShape>
                                        <Image Source="{Binding ImageURL}"
                                                        Aspect="AspectFill">
                                        </Image>
                                    </Border>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage BackgroundColor="ForestGreen">
                    <ContentPage.BindingContext>
                        <vm:CookBookViewModel></vm:CookBookViewModel>
                    </ContentPage.BindingContext>
                    <ContentPage.Content>
                        <!--<ListView x:Name="RecipeList" ItemsSource="{Binding RecipeList}" Margin="20" RowHeight="100" SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="vm:RecipeItem">
                                    <ViewCell>
                                        <StackLayout>
                                            <Border HeightRequest="100">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="20">

                                                    </RoundRectangle>
                                                </Border.StrokeShape>
                                                <Image Source="{Binding ImageURL}"
                                                    Aspect="AspectFit">
                                                </Image>
                                            </Border>
                                            <Label Text="test !"></Label>
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>-->
                    </ContentPage.Content>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>