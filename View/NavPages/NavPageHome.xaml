<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Recipe.View.NavPages.NavPageHome"
             Title="NavPageHome">
    <VerticalStackLayout> <!-- child views in a one-dimensional stack!-->
        <Label 
            Text="This is nave page !"
            FontSize="20"
            FontAttributes="Bold"
            Margin="20"
            TextColor="Aqua"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="homeButton"
            Text = "Home"
            Margin = "20"
            Clicked = "HomeButtonClicked">
        </Button>
        <Button
            x:Name="cookButton"
            Text = "CookBook"
            Margin = "20"
            Clicked = "CookBookButtonClicked">
        </Button>
    </VerticalStackLayout>
</ContentPage>